<div class="grid md:gap-4 md:grid-cols-3 p-2 ">
  <% @category.each do |category|%>
  <div class="border border-gray-200 shadow-xl rounded-lg p-4 my-4 mx-2">
 <h1 class="text-2xl font-bold"><%= link_to category.name, category_path(category.id)%></h1>
 <h3 class="py-2" >Great job. You have tracked $3.0 of category 2</h3>
  <p class="py-4"><%= link_to category.icon, category_path(category.id)%></p>
  <%= link_to "View", category_path(category.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
  </div>
<% end%>
</div>

<div class="mt-4">
<%= link_to "Add New Category", new_category_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded ml-8"%>
</div>
